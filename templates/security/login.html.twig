
{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<style>
    body { background:gray; }
    #container { width:400px; margin:0 auto; margin-top:10%; }
    form { width:100%; padding: 30px; border: 1px solid wheat; background: white; box-shadow: 20px black, 5px black;
    #container h1 { width: 38%; margin: 0 auto; padding-bottom: 10px; }
    input[type=text], input[type=password] { width: 100%; padding: 12px 20px; margin: 8px 0; display: inline-block; border: 1px solid gainsboro; box-sizing: border-box; }
    input[type=submit] { background-color: #53af57; color: white; padding: 14px 20px; margin: 8px 0; border: none; cursor: pointer; width: 100%; }
    input[type=submit]:hover { background-color: white; color: #53af57; border: 1px solid #53af57; }

   
</style>

<div id="container">
    <form action="verification.php" method="POST">
        <h1>Connexion</h1>
                
        <label><b>Nom d'utilisateur</b></label>
        <input type="text" placeholder="Entrer le nom d'utilisateur" name="username" required>

        <label><b>Mot de passe</b></label>
        <input type="password" placeholder="Entrer le mot de passe" name="password" required>

        <label><input type="checkbox" tabindex="90" value="forever" id="rememberme" name="rememberme">

            Rester connecter</label>
            
            | <a href="">Mot de passe oubli√©</a>

        <input type="submit" id='submit' value='LOGIN' >
    </form>
</div>
{% endblock %}
