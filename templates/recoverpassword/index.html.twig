{% extends 'base.html.twig' %}

{% block title %}Hello RecoverpasswordController!{% endblock %}

{% block body %}
<div class="container" style="text-align: center;">
    <br>
    <h1 style="color: rgb(94, 14, 14);">Récupérer mon mot de passe</h1>
    <br>

    <form method="post" style="background-color: aquamarine;">
        <div class="form-group">
            <label class="form-label" for="password">Mot de passe *</label>
            <br>
            <input type="password" placeholder="Nouveau mot de passe" name="recuperer_mdp" style="width: 30%;"/><br/>
            <br>
            <label class="form-label" for="passwordconfirmation">Confirmation du mot de passe *</label>
            <br>
            <input type="password" placeholder="Confirmation du mot de passe" name="recuperer_mdpc" style="width: 30%;"/><br/>
            <br>
        </div>
        <div class="form-group">
            <label class="form-label" for="email">Saisir votre adresse mail *</label>
            <br>
            <input type="email" placeholder="Votre adresse mail" name="mail" style="width: 30%;"/><br/>
            <br>
            <button type="submit" class="btn btn-secondary">Valider</button>       
        </div>
    </form>
</div>
{% endblock %}
